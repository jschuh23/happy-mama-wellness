{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "plugins": [
        "stylelint-order",
        "stylelint-color-format",
        "stylelint-high-performance-animation"
    ],
    "rules": {
        "plugin/no-low-performance-animation-properties": true,
        "color-format/format": {
            "format": "hsl"
        },
        "order/order": [
            [
                "custom-properties",
                "dollar-variables",
                "declarations",
                "rules",
                "at-rules"
            ],
            {
                "unspecified": "bottom"
            }
        ],
        "order/properties-order": [
            ["content"],
            {
                "groupName": "display",
                "properties": [
                    "display",
                    "flex",
                    "flex-basis",
                    "flex-grow",
                    "flex-shrink",
                    "flex-flow",
                    "flex-direction",
                    "flex-wrap",
                    "grid",
                    "grid-template",
                    "grid-template-areas",
                    "grid-template-columns",
                    "grid-template-rows",
                    "grid-area",
                    "grid-column",
                    "grid-column-start",
                    "grid-column-end",
                    "grid-row",
                    "grid-row-start",
                    "grid-row-end",
                    "grid-auto-rows",
                    "grid-auto-columns",
                    "grid-auto-flow",
                    "gap",
                    "column-gap",
                    "row-gap",
                    "align-content",
                    "align-items",
                    "align-self",
                    "justify-content",
                    "justify-items",
                    "justify-self",
                    "place-content",
                    "place-items",
                    "place-self",
                    "order",
                    "visibility"
                ]
            },
            {
                "groupName": "position",
                "properties": [
                    "position",
                    "top",
                    "right",
                    "bottom",
                    "left",
                    "inset",
                    "z-index"
                ]
            },
            {
                "groupName": "box model",
                "properties": [
                    "width",
                    "min-width",
                    "max-width",
                    "height",
                    "min-height",
                    "max-height",
                    "margin",
                    "margin-top",
                    "margin-right",
                    "margin-bottom",
                    "margin-left",
                    "margin-inline",
                    "margin-inline-start",
                    "margin-inline-end",
                    "margin-block",
                    "margin-block-start",
                    "margin-block-end",
                    "padding",
                    "padding-top",
                    "padding-right",
                    "padding-bottom",
                    "padding-left",
                    "padding-inline-start",
                    "padding-inline-end",
                    "padding-block-start",
                    "padding-block-end"
                ]
            },
            {
                "groupName": "text",
                "properties": [
                    "font",
                    "font-family",
                    "font-size",
                    "font-style",
                    "font-weight",
                    "line-height",
                    "color",
                    "letter-spacing",
                    "text-align",
                    "text-decoration",
                    "text-indent",
                    "text-overflow",
                    "text-rendering",
                    "text-shadow",
                    "text-transform",
                    "white-space",
                    "word-spacing"
                ]
            },
            {
                "groupName": "backgrounds",
                "properties": [
                    "background",
                    "background-attachment",
                    "background-clip",
                    "background-color",
                    "background-image",
                    "background-position",
                    "background-repeat",
                    "background-size"
                ]
            },
            {
                "groupName": "borders",
                "properties": [
                    "border",
                    "border-top",
                    "border-right",
                    "border-bottom",
                    "border-left",
                    "border-width",
                    "border-top-width",
                    "border-right-width",
                    "border-bottom-width",
                    "border-left-width",
                    "border-style",
                    "border-top-style",
                    "border-right-style",
                    "border-bottom-style",
                    "border-left-style",
                    "border-color",
                    "border-top-color",
                    "border-right-color",
                    "border-bottom-color",
                    "border-left-color",
                    "border-radius",
                    "border-top-left-radius",
                    "border-top-right-radius",
                    "border-bottom-left-radius",
                    "border-bottom-right-radius"
                ]
            },
            {
                "groupName": "outlines",
                "properties": [
                    "outline",
                    "outline-color",
                    "outline-style",
                    "outline-width",
                    "outline-offset"
                ]
            },
            [
                "aspect-ratio",
                "box-shadow",
                "cursor",
                "list-style",
                "object-fit",
                "overflow",
                "overflow-x",
                "overflow-y",
                "pointer-events",
                "transform",
                "transform-box",
                "transform-origin",
                "transform-style",
                "transition",
                "transition-delay",
                "transition-duration",
                "transition-property",
                "transition-timing-function",
                "will-change"
            ],
            {
                "unspecified": "bottomAlphabetical",
                "emptyLineBeforeUnspecified": "always"
            }
        ]
    }
}
